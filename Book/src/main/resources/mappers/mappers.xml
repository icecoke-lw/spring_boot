<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jou.mapper.BookMapper">
    <insert id="addBook">
        insert into book(name,author,press,category) values(#{name},#{author},#{press},#{category})
    </insert>
    <update id="updateBook">
        update book set name=#{name},press=#{press},author=#{author},category=#{category} where id=#{id}
    </update>
    <delete id="deleteBook">
        delete from book where id=#{id}
    </delete>

    <select id="getAll" resultType="com.jou.pojo.Book">
        select * from book
    </select>
    <select id="queryBook" resultType="com.jou.pojo.Book">
        select * from book where name like "%"#{name}"%"
    </select>
    <select id="queryId" resultType="com.jou.pojo.Book">
        select * from book where id=#{id}
    </select>

</mapper>

